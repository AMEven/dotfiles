{
  "languageserver": {
    "purescript": {
      "command": "purescript-language-server",
      "args": ["--stdio"],
      "filetypes": ["purescript"],
      "rootPatterns": ["bower.json", "psc-package.json", "spago.dhall"]
    },
    "lua": {
      "command": "lua-lsp",
      "filetypes": ["lua"]
    },
    "haskell": {
      "command": "haskell-language-server-wrapper",
      "args": ["--lsp"],
      "rootPatterns": ["*.cabal", "stack.yaml", "cabal.project", "package.yaml", "hie.yaml"],
      "filetypes": ["haskell", "lhaskell"],
      "disableSnippetCompletion": true
    }
  },
  "diagnostic.maxWindowHeight": 80,
  "diagnostic.maxWindowWidth": 120,
  "coc.preferences.useQuickfixForLocations": true,

  "javascript.preferences.quoteStyle": "double",
  "javascript.validate.enable": false,
  "javascript.suggest.completeFunctionCalls": false,
  "javascript.format.semicolons": "remove",
  "javascript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.format.insertSpaceAfterOpeningAndBeforeClosingNonemptyBraces": true,
  "typescript.suggest.completeFunctionCalls": false,
  "typescript.format.semicolons": "remove",

  "list.maxPreviewHeight": 15,
  "list.source.files.args": ["--hidden", "--files"],

  "pyright.completion.snippetSupport": false,
  "python.linting.pylintEnabled": true,
  "python.linting.pylintArgs": ["--disable=all", "--enable=W0601,W0611,E0001,E0102,E0601,E0602,E0603"],

  "purescript.addSpagoSources": true,
  "purescript.fastRebuild": true,
  "purescript.autocompleteGrouped": true,
  "purescript.importsPreferredModules": ["Prelude"],

  "sql.database": "postgresql"
}
